<UserControl x:Class="PizzaNetControls.PizzaRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:pizzaNetControls="clr-namespace:PizzaNetControls"
             xmlns:pizzaNetConverters="clr-namespace:PizzaNetControls.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <DockPanel>
        <DockPanel.Resources>
            <pizzaNetConverters:OrderDetailsIdConverter x:Key="idConverter"/>
        </DockPanel.Resources>
        <TextBlock Text="{Binding Path=OrderDetail.OrderDetailID, Converter={StaticResource ResourceKey=idConverter}}"/>
    </DockPanel>
</UserControl>
