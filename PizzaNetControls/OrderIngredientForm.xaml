<Window x:Class="PizzaNetControls.OrderIngredientForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OrderIngredientForm" Height="250" Width="200" ResizeMode="NoResize" WindowStyle="ToolWindow" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

            <ComboBox Name="listBox" Width="100" Height="25" SelectedIndex="0" Margin="10,10,10,10" ItemsSource="{Binding Ingredients}" SelectionChanged="listBox_SelectionChanged">

            </ComboBox>

            <Label Margin="10,10,10,0">
                Quantity
            </Label>

            <TextBox Name="textQuantity" Margin="10,0,10,10">

            </TextBox>

            <Button Width="100" Height="25" Margin="10,10,10,10" Click="ButtonOrder_Click">
                Order
            </Button>
        </StackPanel>
    </DockPanel>
</Window>
