<UserControl x:Name="IngredientsRowControl"
             x:Class="PizzaNetControls.IngredientsRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:pizzaNetControls="clr-namespace:PizzaNetControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="205"
             Height="50">
    <StackPanel Orientation="Horizontal">
        <Button Width="40" Margin="15, 15, 5, 15">
            &lt;
        </Button>
        <StackPanel Width="75" Margin="5">
            <Viewbox Stretch="Uniform">
                <TextBlock Text="{Binding ElementName=IngredientsRowControl, Path=IngredientName}"/>
            </Viewbox>
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="10" Text="Quantity: "/>
                <TextBlock FontSize="10" Text="{Binding ElementName=IngredientsRowControl, Path=IngredientQuantity}"/>
                <TextBlock FontSize="10" Text="g"/>
            </StackPanel>
        </StackPanel>
        <Button Width="40" Margin="5, 15, 15, 15">
            &gt;
        </Button>
    </StackPanel>
</UserControl>
