<UserControl x:Class="PizzaNetControls.Workers.WorkerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ProgressSpinner="clr-namespace:LoadingPanelSample.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50" Width="50" Height="50">
    <Grid>
        <ProgressSpinner:CircularProgressBar x:Name="spinner" Visibility="Hidden"/>
        <Button Name="button" Background="Transparent" Click="button_Click">
            <Image Source="/PizzaNetControls;component/res/RefreshIcon.png" />
        </Button>
    </Grid>
</UserControl>
